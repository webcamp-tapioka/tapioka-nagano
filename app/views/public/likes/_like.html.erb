<% if current_user.present? %>
<% if products.liked_by?(current_user) %>
  <%= link_to product_likes_path(products),method: :delete,remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= products.likes.count %> いいね
  <% end %>
<% else %>
  <%= link_to product_likes_path(products),method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= products.likes.count %> いいね
  <%end%>
<%end%>
<% else %>
<i class="fas fa-heart" aria-hidden="true"></i>
<%= products.likes.count %>いいね


<% end %>