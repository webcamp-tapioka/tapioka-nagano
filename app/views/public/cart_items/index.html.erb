<h2>カート</h2>

<table>
	<tr>
		<th>ジャケ写</th>
		<th>タイトル</th>
		<th>アーティスト</th>
		<th>値段</th>
		<th>ステータス</th>
		<th>個数</th>

	</tr>
		<% @cart_items.each do |item| %>
		<tr>
			<td><%= attachment_image_tag item.product , :image, format: 'jpg',fallback: 'no_image.jpg', size: '30x30'  %> </td>
			<td> <%= item.product.title %> </td>
			<td>    </td>
			<td> <%= item.product.price.to_i %>円</td>
			<td> <%= item.product.product_status_id %></td>
			 <td><%= form_for(item) do |f|   %>
				<%= f.number_field :product_amount, :value => item.product_amount %>
				<%= f.submit "変更" %>
			</td> 
			<td> <%= link_to "X", item.product, method: :delete, data: {confirm: "消すよん"} %>
		</tr>
		<%end%>
		<%end%>
