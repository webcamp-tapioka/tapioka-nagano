<div class="container">
    <div class="row">
　　　　　　<div class="col-lg-1">
<h1>商品検索結果一覧</h1>

      <table class="table table-hover">
        <thead>


            <p>検索</p>
            <%= form_tag(products_search_path,:method => 'get') do %>
              <%= text_field_tag :search %>
              <%= submit_tag 'Search', :name => nil %>
            <% end %>

            

         <tr>
            <th>タイトル</th>
            <th>アーティスト</th>
            <th>ジャンル</th>
            <th>レーベル</th>
            <th>CDシングル</th>
            <th>価格</th>
            <th>在庫</th>
          </tr>
        </thead>
        <tbody>
         
          <tr>
            <td>
              <td>
             <% @products.each do |product| %>
            <tr>
              <td>
              <td>
              


               <td><% if  product.image %>
                <%= attachment_image_tag product, :image, :fill, 30, 30, format: 'jpeg' %>
              <% end %></td>

                <td><%= link_to  product_path(product.id) do %>
                <%= product.title %></td>
                
                <td><%= product.price %></td>
                <td><%= product.amount %></td>
                <td><%= product.product_status_id %></td>
               
               <td><%= link_to '商品詳細',products_path(product.id),method: :post%></td>
                            
              <% end %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>

</div>

