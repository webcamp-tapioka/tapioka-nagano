<div class="container">
  <div class="col-lg-12">
  
  <h1>商品一覧(一般)</h1>

            <p>検索</p>
            <%= form_tag(products_search_path,:method => 'get') do %>
              <%= text_field_tag :search %>
              <%= submit_tag 'Search', :name => nil %>
            <% end %>

 
      <table class="table table-hover">
        <thead>

          <tr>
           　<th>ジャケット写真</th>
            <th>タイトル</th>
            <th>CDシングル</th>
            <th>アーティスト名</th>
            <th>値段(税別)</th>
            <th>在庫状況</th>
            <th>ステータス</th>
          </tr>
        </thead>
                  <% @products_all.each do |product| %>
          <tr>
               
                   <td>
                      <% if  product.image %>
                      <%= attachment_image_tag product, :image, :fill, 30, 30, format: 'jpeg' %>
                  </td>
              <% end %>

                <td>
                <div data-turbolinks="false"><%= link_to  product_path(product.id) do %>
                
                <%= product.title %>                <%end%></div></td>

                <td><%= product.single_album_flag %></td>
                
                
                <% product.artists.each do |f| %>
                <td><%= f.name  %></td>
                <% end %>

                
                <td><%= product.price %></td>
                <td><%= product.amount %></td>
                <td><%= product.product_status_id %></td>
               
               <td><div data-turbolinks="false"><%= link_to '商品詳細',product_path(product.id) %></div></td>

            

               <td><div id="likes_partial_<%= product.id %>"><%= render partial: 'public/likes/like',locals: {products: product} %>
              </div></td>

              </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products_all %>
    </div>
    </div>
  </div>

