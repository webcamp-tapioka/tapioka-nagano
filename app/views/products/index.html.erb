
<div class="container">
  <div class="row">
  
    </div>

    <div class="col-lg-12">
     
          <p>検索</p>
            <%= form_tag(products_search_path,:method => 'get') do %>
              <%= text_field_tag :search %>
              <%= submit_tag 'Search', :name => nil %>
          <% end %>


          </ul>


      <h1>商品一覧(一般)</h1>

   
          <tr>
         　　　<th>ジャケット写真</th>
            <th>タイトル</th>
            <th>アーティスト名</th>
            <th>在庫状況</th>
            <th>値段(税別)</th>
            <th>ステータス</th>
          </tr>
       
        <

          <tr>
              <td></td>
              <td></td>
              

              <% @products.each do |product| %>
               <td><% if  product.image %>
                <%= attachment_image_tag product, :image, :fill, 30, 30, format: 'jpeg' %>
              <% end %></td>

                <td><%= link_to  product_path(product.id) do %>
                <%= product.title %></td>
                <%end%>
                
                <td><%= product.price %></td>
                <td><%= product.amount %></td>
                <td><%= product.product_status_id %></td>
               
               <td><%= link_to '商品詳細',product_path(product)%></td>

            

               <td><div id="likes_partial_<%= product.id %>"><%= render partial: 'public/likes/like',locals: {products: product} %>
              </div></td>

              <td></td>
            </tr>
          <% end %>
        </tbody>
    
    </div>
  </div>

