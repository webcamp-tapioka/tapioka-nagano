
<div class="container">
  <div class="row">
  
    </div>

    <div class="col-lg-12">
     
         


      <h1>商品一覧(一般)</h1>

        
          <tr>
           　<th>ジャケット写真</th>
            <th>タイトル</th>
            <th>アーティスト名</th>
            <th>値段(税別)</th>
            <th>在庫状況</th>
            <th>ステータス</th>
          </tr>

          <% @products.each do |product| %>
          <tr>
               
                   <td>
                      <% if  product.image %>
                      <%= attachment_image_tag product, :image, :fill, 30, 30, format: 'jpeg' %>
                  </td>
              <% end %>

                <td><%= link_to  products_path(product.id),method: :post do %>
                
                <%= product.title %></td>
                <%end%>
                <td><%= product.single_album_flag %></td>
                <% product.artists.each do |f| %>
                <td><%= f.name  %></td>
                <% end %>
                
                <td><%= product.price %></td>
                <td><%= product.amount %></td>
                <td><%= product.product_status_id %></td>
               
               <td><%= link_to '商品詳細',products_path(product.id),method: :post%></td>

            

               <td><div id="likes_partial_<%= product.id %>"><%= render partial: 'public/likes/like',locals: {products: product} %>
              </div></td>

              </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products_all %>
    </div>
    </div>
  </div>


