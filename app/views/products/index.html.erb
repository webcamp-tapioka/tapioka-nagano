
<div class="container">
  <div class="row">
  
    </div>

    <div class="col-lg-12">
      
      <h1>商品一覧(一般)</h1>

      <table class="table table-hover">
        <thead>


         <tr>
         　　　<th>ジャケット写真</th>
            <th>タイトル</th>
            <th>アーティスト名</th>
            <th>在庫状況</th>
            <th>値段(税別)</th>
            <th>ステータス</th>
           </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td>
              <td>
              <%= link_to product_path(product.id) do %>

                <td><%= product.image_id %></td>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.amount %></td>
                <td><%= product.product_status_id %></td>
               
                            
              <% end %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
