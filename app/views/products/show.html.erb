<h1>商品詳細</h1>

<table class="table table-hover">
        <thead>

			　　　<tr>
		            <th>タイトル</th>
		            <th>アーティスト</th>
		            <th>ジャンル</th>
		            <th>レーベル</th>
		            <th>CDシングル</th>
		            <th>価格</th>
		            <th>在庫</th>
          　　　　　</tr>
　　　　　　　</thead>
 　　　　　　　　　　　　　<% if  @products.image %>
                <%= @product.image_id %>
                <% end %>
                <td><%= @products.title %></td>
                <td><%= @products.price %></td>
                <td><%= @products.amount %></td>
                <td><%= @products.product_status_id %></td>
                <td>
                	<% if @products.liked_by?(current_user) %>
                    <%= link_to product_like_path(@products),method: :delete do %>
                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                      <%= @products.likes.count %> いいね
                    <% end %>
                  <% else %>
                    <%= link_to product_likes_path(@products),method: :post do %>
                      <i class="fas fa-heart" aria-hidden="true"></i>
                      <%= @products.likes.count %> いいね
                    <%end%>
                <%end%>
　　　　　　　 <td> <%= link_to 'カートに入れる',cart_items_path,method: :post%></td>