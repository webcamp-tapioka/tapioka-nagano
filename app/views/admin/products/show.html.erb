<div class="container">
  <div class="row">
  


    <div class="col-lg-12">
      
      <h1>商品詳細(管理者)</h1>

      <table class="table table-hover">
        <thead>
         <tr>
           　<th>ジャケ写</th>
            <th>タイトル</th>
            <th>アーティスト</th>
            <th>シングル</th>
            <th>レーベル名</th>
            <th>ジャンル</th>
            <th>在庫状況</th>
            <th>値段(税抜)</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
            <tr>
              <td>
                  <%= attachment_image_tag @products, :image, :fill, 90, 90, format: 'jpeg' ,fallback: 'no_image.jpg'  %>
              </td>
              <td><%= @products.title %></td>
              <td>
                <% @products.artists.each do |f| %>
                  <%= f.name  %><br>
                <% end %>
              </td>
              <td><%= @products.single_album_flag %></td>
              <td><%= @products.label.name %></td>
              <td>
                <% @products.genres.each do |f| %>
                  <%= f.name %><br>
                <% end %>
              </td>
              <td><%= @products.amount %></td>
              <td><%= number_to_currency(@products.price, unit: "￥", precision: 0) %></td>
              <td><%= @products.product_status_id %></td>  
            </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_admin_product_path %>
    </div>


    <table class="table table-hover">
      <thead>
        <tr>
          <th>ディスク番号</th>
          <th>曲順</th>
          <th>曲名</th>
        </tr>
      </thead>
      <tbody>
        <% @products.songs.each do |song| %>
          <tr>
              <td><%= song.disc_number %></td>
              <td><%= song.track_number %></td>
              <td><%=  "#{song.song}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>