<h1>商品情報入力フォーム(管理者)</h1>

<%= form_for([:admin,@product]) do |f| %>
<p>ジャケット写真</p>
	<%= f.attachment_field :image %>

<p>タイトル</p>
  <%= f.text_field :title %>
<p>アーティスト</p>
   <%= fields_for :artist_products do |ff| %>
   <% ff.select :artist_id, Artist.all.ids.to_a %>
<% end %>


<p>ジャンル</p>


<p>レーベル</p>
<%= f.select :label_id, Label.all.ids %>
 

<p>CDシングル</p>
  <%= f.select  :single_album_flag, Product.single_album_flags.keys %>

<p>価格</p>
  <%= f.text_area :price %>


<p>在庫</p>
   <%= f.number_field  :amount %> 


<p>販売状況</p>
   <%= f.select  :product_status_id, Product.product_status_ids.keys %> 

<%= f.submit "登録" %>
  
<% end %>
