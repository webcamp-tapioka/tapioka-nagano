<div>
<%= form_for([:admin,@product]) do |f| %>

	
	  <%= f.attachment_field :image %>

	<p>タイトル</p>
	  <%= f.text_field :title %>
	<p>アーティスト名</p>


	<p>ジャンル</p>
	  

