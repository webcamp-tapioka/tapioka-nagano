<h1>商品編集(管理者)</h1>

<div>
<%= form_for([:admin,@product]) do |f| %>


	<p>ジャケット写真</p>
	  <%= f.attachment_field :image %>

	<p>タイトル</p>
	  <%= f.text_field :title %>
	<p>アーティスト名</p>
		<%= f.fields_for :artist_products do |ff| %>
		  <%= ff.collection_select :artist_id, Artist.all, :id, :name %>
		  <% end %>

	<p>ジャンル</p>
	  <%= f.fields_for :genre_products do |ff| %>
	  <%= ff.collection_select :genre_id, Genre.all, :id, :name %>
	  <% end %>


	 <p>レーベル</p>
	  <%= f.collection_select :label_id, Label.all, :id, :name %>

	 <p>CDシングル</p>
  		<%= f.select  :single_album_flag, Product.single_album_flags.keys %>


	<p>価格</p>
	  <%= f.number_field :price %>
	<p>在庫</p>
	 　<%= f.number_field :amount %>
	<p>販売状況</p>
   		<%= f.select  :product_status_id, Product.product_status_ids.keys %>
	    
	 			
	
	<%= f.submit "追加する" %>
<% end %>




