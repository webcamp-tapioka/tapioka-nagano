<h1>商品追加(管理者)</h1>

<div>
<%= form_for([:admin,@product]) do |f| %>

	<table>
	 
	  <thead>
	  <%= f.attachment_field :image %>

	
	<p>タイトル</p>
	  <%= f.text_field :title %>
	<p>アーティスト名</p>
	
	<p>ジャンル</p>
	  
	 <p>レーベル</p>
	 
	<p>価格</p>
	  <%= f.text_area :price %>
	<p>在庫</p>
	 　<%= f.text_area :amount , name: "products[][amount]"%>
	 	<p>販売状況</p>
   <%= f.select  :product_status_id, Product.product_status_ids.keys %>
	    
	  </thead>
	  <tbody>

	</table>

	<%= f.submit "追加する" %>
<% end %>
