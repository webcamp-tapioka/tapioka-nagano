
<div class="container">
  <div class="row">
  
    </div>

    <div class="col-lg-12">
      
      <h1>商品一覧(管理者)</h1>

      <table class="table table-hover">
        <thead>

         <tr>
            <th>タイトル</th>
            <th>アーティスト</th>
            <th>ジャンル</th>
            <th>レーベル</th>
            <th>CDシングル</th>
            <th>価格</th>
            <th>在庫</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td>
              <td>
             <%= link_to admin_product_path(product.id) do %>

               <%= product.image_id %>

               <%= product.title %>

               <td> <%= product.price %></td>

               <td> <%= product.amount %></td>

               <td> <%= product.product_status_id %></td>
              <% end %>
              </td>
              <td></td>

                  
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
