
<div class="container">
  <div class="row">
  
    </div>

    <div class="col-lg-12">
      
      <h1>商品一覧(管理者)</h1>

      <p>検索</p>
       <%= form_tag(products_search_path,:method => 'get') do %>
       <%= text_field_tag :search %>
       <%= submit_tag 'Search', :name => nil %>
      <% end %>




      <table class="table table-hover">
        <thead>

         <tr>
            <th>ジャケ写</th>
            <th>タイトル</th>
            <th>アーティスト</th>
            <th>在庫状況</th>
            <th>値段(税抜)</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          
            <tr>
              <td>
              <td>         
               <td><% if  product.image %>
                <%= attachment_image_tag product, :image, :fill, 30, 30, format: 'jpeg' %>
              <% end %>
              </td>

               <td><%= link_to admin_product_path(product.id) do %>

               <%= product.title %></td>

               <td><%= product.artists.all.name %></td>

               <td></td>

               <td> <%= product.amount %></td>


               <td> <%= product.price %></td>

               <td> <%= product.product_status_id %></td>

               <td><%= link_to '商品詳細',product_path(product)%></td>

              <% end %>
              </td>
              <td></td>

                  
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
