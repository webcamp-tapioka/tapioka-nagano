
<div class="container">
  <div class="row">
  
    </div>

    <div class="col-lg-12">
      
      <h1>商品一覧(管理者)</h1>

      <p>検索</p>
       <%= form_tag(admin_products_search_path,:method => 'get') do %>
       <%= text_field_tag :search %>
       <%= submit_tag 'Search', :name => nil %>
      <% end %>




      <table class="table table-hover">
        <thead>

         <tr>
            <th>タイトル</th>
            <th>アーティスト</th>
            <th>ジャンル</th>
            <th>レーベル</th>
            <th>CDシングル</th>
            <th>価格</th>
            <th>在庫</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td>
              <td>
                         
               <td><% if  product.image %>
                <%= attachment_image_tag product, :image, :fill, 30, 30, format: 'jpeg' %>
              <% end %></td>

               <td><%= link_to admin_product_path(product.id) do %>

               <%= product.title %></td>

               <td> <%= product.price %></td>

               <td> <%= product.amount %></td>

               <td> <%= product.product_status_id %></td>
              <% end %>
              </td>
              <td></td>

                  
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
