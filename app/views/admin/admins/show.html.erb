<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <h1>未対応商品一覧</h1>

      
      <%=link_to "送料、消費税変更", edit_admin_postage_and_consumptiontaxs_path %><br>


      <% @orders.each do |order| %>
    
        <table class="table table-hover">
          <thead>
            <tr>
              <th>タイトル</th>
            </tr>
          </thead>
          <tbody>

            <% order.order_products.each do |order_product| %>
              <tr>
                <td><%= order_product.product.title %> </td>
              </tr>
            <% end %>

          </tbody>
        </table>
        
          <%= form_for(order, url: admin_order_path(order), method: "patch") do |f| %>
            <%= f.select :order_status_id, Order.order_status_ids.keys %>
            <%= f.submit "更新" %>
          <% end %>
      
        <p> 送付先名前 </p>
        <%= order.delivery_name %><br>
        <p> 郵便番号 </p>
        <%= order.delivery_postal_code %><br>
        <p> 住所 </p>
        <%= order.delivery_address %><br>

      <% end %>

    </div>
  </div>
</div>
    




