<h1>レーベル編集画面</h1>


<%= form_for(@newlabel, url: admin_labels_path) do |f| %>
<%= f.label :name, "新規追加" %>
<%= f.text_field :name %>
<%= f.submit "追加" %>
<% end %>

<%# レーベル名をクリックした時のみ、編集フォームを表示する %>
<% if @editlabel.id %>
  <%= form_for(@editlabel, url: admin_label_path(@editlabel)) do |f| %>
    <%= f.label :name, "編集" %>
    <%= f.text_field :name %>
    <%= f.submit "編集", "data-confirm" => "この内容でよろしいですか？" %>
  <% end %>
  <%= link_to "削除", admin_label_path(@editlabel), method: :delete,
   "data-confirm" => "削除してよろしいですか？" %>
<% end %>


<%# ワイヤーフレーム通りに６レーベルずつ表示させてみた %>
  <caption>レーベル一覧</caption>
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
	  <tbody>
      <tr>

        <% @labels.each.with_index(1) do |label, index| %>

          <td><%= link_to "#{label.name}", edit_admin_label_path(label.id) %></td>

          <% if index == @labels.size %>
            <% break %>
          <% end %>

          <% if index % 6 == 0 %>
            </tr>
            <tr>
          <% end %>

        <% end %>

      </tr>
  	</tbody>
  </table>



